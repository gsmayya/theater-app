# Theater Booking System Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=mysql-theater
DB_PORT=3306
DB_USER=theater_user
DB_PASSWORD=theater_password
DB_NAME=theater_booking

# Redis Configuration
REDIS_URL=redis-theater:6379
REDIS_PASSWORD=theater_redis_pass

# Application Configuration
GO_ENV=production
PORT=8080

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NODE_ENV=production

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=theater_root_password

# Security Settings
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30s

# Cache Configuration
CACHE_TTL=3600
CACHE_CLEANUP_INTERVAL=300
